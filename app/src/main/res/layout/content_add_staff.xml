<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_add_staff"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="80dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="ng.com.techdepo.firebaserw.AddStaff"
    tools:showIn="@layout/activity_add_staff">

    <EditText
        android:paddingBottom="20dp"
        android:id="@+id/staff_name_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Staff Name"/>
    <EditText
        android:paddingBottom="20dp"
        android:id="@+id/staff_age_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Staff Age"/>
    <EditText
        android:id="@+id/staff_level_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Staff Level"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingTop="30dp"
        android:layout_height="wrap_content">
        <Button
            android:layout_marginTop="40dp"
            android:id="@+id/add_staff_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Staff to FireBase"/>

        <Button
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fetch New Config"
            android:onClick="fetchConfig"/>

    </LinearLayout>

</LinearLayout>
